@{
    ViewData["Title"] = "Edit";
}
@model Lizard;

<div class="row">
    <div class="offset-sm-3 col-sm-6">

        <form action="/pirate/@Model.LizardId/update" method="post" class="card">
            <div class="card-header bg-dark text-white">
                Update a Lizard Pirate:
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Name: </label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LizardType">Lizard Type: </label>
                    <input asp-for="LizardType" class="form-control">
                    <span class="text-danger" asp-validation-for="LizardType"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PirateRole">Pirate Role: </label>
                    <input asp-for="PirateRole" class="form-control">
                    <span class="text-danger" asp-validation-for="PirateRole"></span>
                </div>
                <input type="submit" class="btn btn-warning btn-outline-dark" value="Update">
            </div>
        </form>
    </div>
</div>